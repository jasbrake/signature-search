<html>
<%- include('partials/head') %>
<style>
  body {
    padding-top: 5rem;
  }
  .starter-template {
    padding: 3rem 1.5rem;
    text-align: center;
  }
</style>
<body>
<%- include('partials/nav') %>
<main role="main" class="container">
  <div class="starter-template">
    <div class="card">
    <div class="card-header">
      <b><%= signature.sid + '-' + signature.rev %></b>
    </div>
    <div class="card-body">
      <form action="/editsignature/<%= signature.id %>" method="post">
        <div class="form-label-group">
          <label for="msg">Msg</label>
          <input id="msg" name="msg" class="form-control" value="<%= signature.msg %>" required="" autofocus="" type="text">
        </div>

        <hr>
        <div class="form-label-group">
          <label for="rule">Rule</label>
          <textarea id="rule" name="rule" class="form-control" rows="5" required="" type="text"><%= signature.rule %></textarea>
        </div>
        <hr>
        <button type="submit" class="btn btn-primary">Save</button>
      </form>
    </div>
    <div class="card-footer text-muted">
      <%= signature.class_type %>
    </div>
  </div>
  </div>
</main>
</body>
</html>
